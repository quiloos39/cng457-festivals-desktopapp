<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<Pane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
      prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.3-internal"
      fx:controller="edu.metu.cng457.assignment4.controller.FestivalController">
    <children>
        <VBox layoutX="49.0" layoutY="34.0" prefHeight="236.0" prefWidth="232.0" spacing="15.0">
            <children>
                <Label text="Add festival run">
                    <font>
                        <Font name="System Bold" size="16.0"/>
                    </font>
                </Label>
                <Label text="Festival">
                    <font>
                        <Font name="System Bold" size="13.0"/>
                    </font>
                </Label>
                <ComboBox fx:id="festivals" prefHeight="26.0" prefWidth="524.0"/>
                <Label text="Date">
                    <font>
                        <Font name="System Bold" size="13.0"/>
                    </font>
                </Label>
                <DatePicker fx:id="date"/>
                <Label text="Duration">
                    <font>
                        <Font name="System Bold" size="13.0"/>
                    </font>
                </Label>
                <TextField fx:id="duration" prefHeight="26.0" prefWidth="353.0"/>
            </children>
        </VBox>
        <HBox layoutX="49.0" layoutY="317.0" prefHeight="26.0" prefWidth="171.0" spacing="10.0">
            <children>
                <Button mnemonicParsing="false" onAction="#onAdd" prefHeight="26.0" prefWidth="80.0"
                        style="-fx-background-color: green;" text="Add" textFill="WHITE"/>
                <Button mnemonicParsing="false" onAction="#onBack" prefHeight="26.0" prefWidth="80.0"
                        style="-fx-background-color: red;" text="Back" textFill="WHITE"/>
            </children>
        </HBox>
    </children>
</Pane>
